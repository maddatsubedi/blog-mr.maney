---
import SocialLinks from "@/components/SocialLinks.astro";
import SocialMediaPosts from "@/components/socialMediaPosts.astro";

const { social, background } = Astro.props;

const { links, posts } = social;
---

<section
  class="home-section social"
  style={{
    backgroundColor: background,
  }}
>
  <div
    class="home-section-content flex flex-col header-gap max-width-large-2"
  >
    <SocialLinks links={links} />
    <SocialMediaPosts posts={posts} links={links} />
  </div>
</section>
