---
import SocialLinks from "@/components/SocialLinks.astro";
import SocialMediaPosts from "@/components/socialMediaPosts.astro";

const { social } = Astro.props;

const { links, posts } = social;
---

<section class="home-section" style="background-color: #f5f4fe;">
  <!-- Header Gap: gap-[2rem] md:gap-[2.5rem] lg:gap-[3rem] -->
  <div class="home-section-content flex flex-col gap-[2rem] md:gap-[2.5rem] lg:gap-[3rem] max-width-large-2">
    <SocialLinks links={links} />
    <SocialMediaPosts posts={posts} links={links} />
  </div>
</section>