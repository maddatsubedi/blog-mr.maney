---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
const { banner } = Astro.props;
const { title, secondTitle, button, image, content, badges } = banner;
---

<section
  class="hero-main relative bg-primary overflow-hidden p-0 md:min-h-screen"
>
  <div
    class="social-media hidden md:flex gap-10 justify-evenly z-50 absolute flex-col h-full top-0 left-0 px-10 pt-28 2md:pt-32 pb-16"
  >
    <a
      href="#"
      class="social-media-link text-white hover:text-slate-300 transition duration-[250ms]"
      >Facebook</a
    >
    <a
      href="#"
      class="social-media-link text-white hover:text-slate-300 transition duration-[250ms]"
      >YouTube</a
    >
    <a
      href="#"
      class="social-media-link text-white hover:text-slate-300 transition duration-[250ms]"
      >Instagram</a
    >
  </div>
  <div
    class="grid gap-5 max-w-[1200px] mx-auto grid-cols-[0.65fr_0.35fr] md:min-h-screen h-full"
  >
    <div
      class="left flex flex-col gap-6 pt-28 2md:pt-32 md:pl-[106px] px-5 pb-16 z-10 md:justify-center mt-5 md:mt-0"
    >
      <div>
        <h1
          class="banner-title text-white md:text-7xl text-4xl text-wrap font-header"
          set:html={markdownify(title)}
        />
        <h1
          class="banner-title text-[#FFFAC3] md:text-7xl text-4xl text-wrap font-header"
          set:html={markdownify(secondTitle)}
        />
      </div>

      <p class="text-white w-80 font-medium" set:html={markdownify(content)} />

      {
        button?.enable ? (
          <a
            class="w-fit btn btn-outline-white text-white hover:bg-white hover:text-black cursor-pointer"
            href={button.link || `#`}
            target="_blank"
          >
            {button.label}
          </a>
        ) : (
          <a class="w-fit btn btn-outline-white text-white hover:bg-white hover:text-black cursor-pointer">
            {button.label}
          </a>
        )
      }
      <div class="badge-wrapper max-w-[400px] mt-4">
        <Image
          src={badges}
          class="object-cover object-center w-full"
          alt="badges"
          width={400}
          height={100}
          loading="eager"
        />
      </div>
    </div>
    <div
      class="right md:relative pt-28 2md:pt-32 md:pr-[50px] flex justify-center items-center absolute inset-0 z-0 md:opacity-100 opacity-30"
    >
      <div
        class="image-wrapper relative z-20 w-full h-full flex justify-center"
      >
        <Image
          src={image}
          class="object-cover object-top h-full sm:w-1/2 right-0 absolute bottom-0 md:w-full"
          alt="banner"
          width={250}
          height={500}
          loading="eager"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .image-wrapper::before {
    filter: blur(100px);
    position: absolute;
    content: "";
    border-radius: 9999px;
    background-color: #fffac3;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .social-media-link {
    writing-mode: vertical-lr;
  }
</style>
